<%= form_for @company, html: {class: "form-horizontal", role: "form"} do |f| %>

  <%= render 'shared/error_messages', object: @company %>

  <div class="form-group">
    <%= f.label :city, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select :city_id, options_from_collection_for_select(City.all, "id", "city", selected: @company.city_id), {class: "form_select form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, required: true, class: "form-control col-sm-10", rows: "10" %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
