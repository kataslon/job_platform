<%= form_for @proposal, html: {class: "form-horizontal", role: "form"} do |f| %>

  <%= render 'shared/error_messages', object: @proposal %>

  <div class="form-group">
    <%= f.label :speciality, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select :speciality_id, options_from_collection_for_select(Speciality.all, "id", "name", selected: @proposal.speciality_id), {class: "form_select form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :salary, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :salary, required: true, class: "form-control col-sm-10" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :summary, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :summary %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
      <%= link_to 'Back', applicant_proposals_path, class: 'btn btn-default' %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

<% end %>
