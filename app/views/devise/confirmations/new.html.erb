<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal", role: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %><br />
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control col-sm-10" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Resend confirmation instructions", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<div class="col-sm-offset-2 col-sm-10">
  <%= render "devise/shared/links" %>
</div>
