<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %><br />
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, class: "form-control col-sm-10" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-2" %><br />
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control col-sm-10" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log in", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<div class="col-sm-offset-2 col-sm-10">
  <%= render "devise/shared/links" %>
</div>
