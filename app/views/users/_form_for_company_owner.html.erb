<%= form_for @user, html: {class: "form-horizontal", role: "form"} do |f| %>

  <%= render 'shared/error_messages', object: @user %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control col-sm-10" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :company, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select :companies, options_from_collection_for_select(Company.where(user_id: current_user.id), "id", "name", selected: Company.where(user_id: current_user.id).first.id), {class: "form_select form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.check_box :manager %>
      <%= f.label :manager %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
      <%= link_to 'Back', users_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
