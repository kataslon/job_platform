<%= form_for @vacancy, html: {class: "form-horizontal", role: "form"} do |f| %>

  <%= render 'shared/error_messages', object: @vacancy %>

  <div class="form-group">
    <%= f.label :speciality, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select :speciality_id, options_from_collection_for_select(Speciality.all, "id", "name", selected: @vacancy.speciality_id), {class: "form_select form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :title, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, required: true, class: "form-control col-sm-10", rows: "10" %>
    </div>
  </div>

  <%= f.hidden_field :company_id, value: @company.id %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
      <%= link_to 'Back', users_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
