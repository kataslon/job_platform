<div class="header">
  <h2 >
    <%= @vacancy.title %>
  </h2>
  <h3>
    Company: <%= link_to @vacancy.company.name, company_path(@vacancy.company) %>
  </h3>
  <h4>
    Speciality: <b><%= @vacancy.speciality.name %></b>
  </h4>
  <p>
    <%= @vacancy.description %>
  </p>
  <% if current_user && (current_user.has_role?(:manager) || current_user.has_role?(:company_owner)) %>
    <div class="container">
      <div class="row">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Applicant</th>
                <th>Sammary</th>
                <th>Edit response</th>
              </tr>
            </thead>
            <tbody>
              <%= render 'responses' %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div>
  <% if can? :edit, Vacancy %>
    <%= link_to 'Edit', edit_vacancy_path(@vacancy), class: "btn btn-default" %>
  <% end %>
  <% if can? :destroy, Vacancy %>
    <%= link_to 'Delete', vacancy_path(@vacancy), method: 'delete', class: "btn btn-default" %>
  <% end %>
</div>
